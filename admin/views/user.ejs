<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="../../public/css/admin.css">
</head>
<body>
    <header>
        <h1>User List</h1>
        <nav>
            <a href="/users/new">Add New User</a>
        </nav>
    </header><br>    
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Role</th>
                <th style="text-align: center;">Hash Password</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td><%= user.password %></td>
                    <td><%= user.createdAt.toISOString().substring(0, 10) %></td>
                    <td>
                        <a href="/users/<%= user._id %>/edit">Edit</a>
                        <button onclick="showModal('<%= user._id %>')">Delete</button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <p>Are you sure you want to delete this user?</p>
            <button id="confirmDelete">Yes, Delete</button>
            <button onclick="closeModal()">Cancel</button>
        </div>
    </div>

    <script>
    function showModal(userId) {
        document.getElementById('myModal').style.display = 'flex';
        document.getElementById('confirmDelete').onclick = function() {
            deleteUser(userId);
        };
    }

    function closeModal() {
        document.getElementById('myModal').style.display = 'none';
    }

    function deleteUser(userId) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/users/${userId}?_method=DELETE`;
        document.body.appendChild(form);
        form.submit();
    }
    </script>
</body>
</html>
