<head>
    <link rel="stylesheet" href="../../../public/css/dish.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<div class="container">
    <h1>Danh sách món ăn</h1>
    <a href="/dish/create" class="btn">Thêm món mới</a>
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>thumbnail</th>
                <th>title</th>
                <th>description</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            <% dishes.forEach(function(dish) { %>
                <tr>
                    <td>
                        <img src="/uploads/<%= dish.thumbnail %>" style="height: 10vh;">
                    </td>
                    <td><%= dish.title %></td>
                    <td><%= dish.description %></td>
                    <td >
                        <a href="/dish/edit/<%= dish._id %>" class="btn">Sửa</a>
                    <form action="/dish/delete/<%= dish._id %>?_method=DELETE" method="POST" class="inline">
                        <button type="submit" onclick="return confirm('Bạn có chắc muốn xóa món này?');">Xóa</button>
                    </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
